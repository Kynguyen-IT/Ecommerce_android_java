<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".SearchProductsActivity">

  <RelativeLayout
    android:id="@+id/rlll3"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorPrimary"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    >

    <EditText
      android:id="@+id/search_product_name"
      android:layout_width="270dp"
      android:layout_height="45dp"
      android:hint="Products Name"
      android:textSize="18dp"
      android:layout_marginTop="10dp"
      android:textColorHint="@color/colorPrimaryDark"
      android:background="@color/white"
      android:layout_marginStart="5dp"
      android:padding="10dp"

      ></EditText>

    <Button
      android:id="@+id/search_products_btn"
      android:textAllCaps="false"
      android:layout_width="wrap_content"
      android:text="Search"
      android:background="@color/colorPrimary"
      android:layout_height="45dp"
      android:textColor="#fff"
      android:textSize="18dp"
      android:layout_toRightOf="@+id/search_product_name"
      android:layout_marginTop="10dp"
      android:padding="10dp"
      >
    </Button>
  </RelativeLayout>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/list_search_products"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_below="@+id/rlll3"
    >
  </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>