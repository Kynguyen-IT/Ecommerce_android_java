<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="10dp"
  >

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

  <TextView
    android:id="@+id/order_username"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:textColor="#000"
    android:layout_marginTop="10dp"
    android:textSize="14dp"
    android:textStyle="bold"
    android:layout_marginLeft="5dp"
    >
  </TextView>

  <TextView
    android:id="@+id/order_phone"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:textColor="#000"
    android:textSize="14dp"
    android:textStyle="bold"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:textAlignment="textEnd"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="5dp"
    >
  </TextView>

  <TextView
    android:id="@+id/order_total_price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#000"
    android:textSize="16dp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_below="@id/order_username"
    android:layout_marginTop="10dp"
    >
  </TextView>

    <TextView
      android:id="@+id/order_address"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#000"
      android:textSize="16dp"
      android:textAlignment="center"
      android:textStyle="bold"
      android:layout_below="@id/order_total_price"
      android:layout_marginTop="10dp"
      >
    </TextView>

    <TextView
      android:id="@+id/order_date_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#000"
      android:textAlignment="center"
      android:textSize="16dp"
      android:textStyle="bold"
      android:layout_marginLeft="5dp"
      android:layout_below="@id/order_address"
      android:layout_marginTop="10dp"
      >
    </TextView>

    <Button
      android:id="@+id/Show_all_products"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:text="Show This Order Products"
      android:background="@drawable/buttons"
      android:textColor="#fff"
      android:textAllCaps="false"
      android:layout_below="@+id/order_date_time"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10dp"
      ></Button>
  </RelativeLayout>

</androidx.cardview.widget.CardView>