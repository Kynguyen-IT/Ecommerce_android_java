<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Admin.AdminCategoryActivity">
  <TextView
    android:id="@+id/slogan_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="27dp"
    android:text="Add New Product"
    android:textAlignment="center"
    android:textSize="26sp"
    android:textStyle="bold"
    />

  <LinearLayout
    android:id="@+id/linear_one_category_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/slogan_category"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_marginTop="20dp"
    >
    <ImageView
      android:id="@+id/t_shirts"
      android:layout_width="wrap_content"
      android:layout_height="80dp"
      android:src="@drawable/tshirts"

      ></ImageView>

    <ImageView
      android:id="@+id/t_sports"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/sports"

      ></ImageView>

    <ImageView
      android:id="@+id/female_dresses"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/female_dresses"
      ></ImageView>

    <ImageView
      android:id="@+id/sweather"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:src="@drawable/sweather"
      ></ImageView>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/linear_two_category_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/linear_one_category_layout"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_marginTop="10dp"
    >
    <ImageView
      android:id="@+id/glasses"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:src="@drawable/glasses"

      ></ImageView>

    <ImageView
      android:id="@+id/purses_bags_wallets"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:src="@drawable/purses_bags"

      ></ImageView>

    <ImageView
      android:id="@+id/hats"
      android:layout_width="80dp"
      android:layout_height="90dp"
      android:src="@drawable/hats"
      ></ImageView>

    <ImageView
      android:id="@+id/shoess"
      android:layout_width="70dp"
      android:layout_height="80dp"
      android:src="@drawable/shoess"
      android:layout_marginStart="10dp"
      ></ImageView>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/linear_three_category_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/linear_two_category_layout"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_marginTop="10dp"
    >
    <ImageView
      android:id="@+id/headphoness"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:src="@drawable/headphoness"

      ></ImageView>

    <ImageView
      android:id="@+id/laptops"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:src="@drawable/laptops"

      ></ImageView>

    <ImageView
      android:id="@+id/watches"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:src="@drawable/watches"
      ></ImageView>

    <ImageView
      android:id="@+id/mobilesphones"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:src="@drawable/mobiles"
      ></ImageView>
  </LinearLayout>

  <Button
    android:id="@+id/maintain_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/check_orders_btn"
    android:background="@drawable/buttons"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:text="Maintain Product"
    android:textSize="20dp"
    android:textColor="#fff"
    android:textAllCaps="false"
    />

  <Button
    android:id="@+id/check_orders_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/admin_logout"
    android:background="@drawable/buttons"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:text="Check new Order"
    android:textSize="20dp"
    android:textColor="#fff"
    android:textAllCaps="false"
    />



  <Button
    android:id="@+id/admin_logout"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:background="@drawable/buttons"
    android:layout_marginBottom="10dp"
    android:text="Logout"
    android:textSize="20dp"
    android:textColor="#fff"
    android:textAllCaps="false"
    />


</RelativeLayout>